<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="707.0" prefWidth="426.0" style="-fx-background-color: #F0EDCC;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CreateAppointment">
   <children>
      <VBox prefHeight="99.0" prefWidth="426.0" spacing="5.0">
         <children>
            <Label prefHeight="22.0" prefWidth="429.0" text="Insurance Number:">
               <font>
                  <Font name="Consolas" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="insuranceNumberField" onAction="#getPatientById" prefHeight="40.0" prefWidth="350.0" promptText="Search Insurance">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Consolas" size="18.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <VBox layoutY="99.0" prefHeight="329.0" prefWidth="426.0" spacing="5.0">
         <children>
            <TableView fx:id="tblw_SelectedPatient" prefHeight="80.0" prefWidth="386.0">
              <columns>
                <TableColumn fx:id="InsuranceNumber" prefWidth="120.0" resizable="false" text="Insurance number" />
                <TableColumn fx:id="Name" prefWidth="70.0" resizable="false" text="Name" />
                 <TableColumn fx:id="Family" prefWidth="70.0" resizable="false" text="Family" />
                 <TableColumn fx:id="Birthdate" prefWidth="70.0" resizable="false" text="Birthdate" />
                 <TableColumn fx:id="Insurance" prefWidth="55.0" resizable="false" text="Insurance" />
              </columns>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </TableView>
            <Label text="Note:">
               <font>
                  <Font name="Consolas" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextArea fx:id="appointmentNoteArea" prefHeight="188.0" prefWidth="386.0">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Consolas" size="18.0" />
               </font>
            </TextArea>
         </children>
      </VBox>
      <VBox layoutY="428.0" prefHeight="55.0" prefWidth="426.0">
         <children>
            <HBox prefHeight="50.0" prefWidth="443.0" spacing="5.0">
               <children>
                  <DatePicker fx:id="datePicker"  onAction="#handleDateSelection" prefHeight="40.0" prefWidth="180.0" promptText="Select Date">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" top="5.0" />
                     </HBox.margin>
                  </DatePicker>
                  <!--Hier kommt TimePicker-->
                  <ComboBox fx:id="timeComboBox"  prefHeight="40.0" prefWidth="180.0" promptText="Select Time">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" top="5.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox layoutY="483.0" prefHeight="152.0" prefWidth="426.0">
         <children>
            <ComboBox fx:id="doctorComboBox" onShowing="#loadDoctorsIntoComboBox" prefHeight="40.0" prefWidth="180.0" promptText="Doctor" visibleRowCount="4">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <Button fx:id="saveButton" onAction="#createAppointment" layoutX="225.0" layoutY="653.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="187.0" styleClass="buttonDashCenter" text="Save" />
   </children>
</AnchorPane>
